<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.segames.boggle"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="19"
        android:targetSdkVersion="21" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo2"
        android:label="@string/app_name"
        android:screenOrientation="portrait"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.segames.boggle.Splash"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.segames.boggle.Score"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.segames.boggle.SinglePlayer"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.segames.boggle.DoublePlayerAlt"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.segames.boggle.MainActivity"
            android:screenOrientation="portrait" />
    </application>

</manifest>