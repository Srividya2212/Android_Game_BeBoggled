<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="@drawable/score1"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin" android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".DoublePlayer">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
>
    <TextView
        android:id = "@+id/CongoText"
        style = "@style/ScoreText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Great!"/>
    <TextView
        android:id = "@+id/RoundVal"
        style = "@style/ScoreValueText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Round: 10"
        android:visibility="gone"/>
    <TextView
        android:id = "@+id/ScoreVal"
        style = "@style/ScoreValueText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Score: 10"/>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
   <!-- <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mode"
            style = "@style/RoundText"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Basic"
            android:layout_gravity="center_horizontal"
