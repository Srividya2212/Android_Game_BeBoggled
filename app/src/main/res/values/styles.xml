<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>
    <style name="BtnTheme">
        <item name="android:layout_width">75dp</item>
        <item name="android:layout_height">75dp</item>
        <item name="android:background">@drawable/whitedie</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">30dp</item>
    </style>

    <style name="BtnThemeScore2">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@drawable/whitedie</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">20dp</item>
        <item name="android:clickable">false</item>
    </style>

    <style name="BtnTheme2">
        <item name="android:background">@android:color/black</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">15dp</item>
    </style>
    <style name="BtnTheme3">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:background">@drawable/whitedie</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">30dp</item>
    </style>
   <!-- <item name="android:alpha">0.50</item>-->
    <style name="ScoreText">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">45dp</item>
    </style>
    <style name="ScoreValueText">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">20dp</item>
    </style>
    <style name="RoundText">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">30dp</item>
    </style>
    <style name="RoundValueText">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">30dp</item>
    </style>

</resources>
