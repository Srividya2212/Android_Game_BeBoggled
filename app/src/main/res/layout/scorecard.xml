<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/border_blue"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.segames.boggle.Scorecard">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="1"
            android:layout_gravity="center_horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:weightSum="1">

                <!-- Round -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_marginTop="20dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="Rounds played   :"
                        android:id="@+id/roundText"
                        android:textColor="#ffffffff"
                        android:layout_marginTop="15dp"
                        android:layout_marginLeft="55dp"
                        android:gravity="left"
                        android:layout_weight="1"
                        android:textStyle="bold"
                        android:shadowDy="5"
                        android:shadowDx="5"
                        android:shadowRadius="15"
                        android:shadowColor="#000000"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:id="@+id/round"
                        android:textColor="#ffffffff"
                        android:layout_marginTop="15dp"
                        android:layout_marginRight="50dp"
                        android:gravity="right"
                        android:layout_weight="1"
                        android:typeface="serif"
                        android:textStyle="bold"
                        android:shadowColor="#000000"
                        android:shadowDx="5"
                        android:shadowDy="5"
                        android:shadowRadius="15"
                        />

                </LinearLayout>

                <!-- Score -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_marginTop="8dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="Your score :"
                        android:textStyle="bold"
                        android:shadowDx="5"
                        android:shadowDy="5"
                        android:shadowRadius="15"
                        android:shadowColor="#000000"
                        android:typeface="serif"
                        android:id="@+id/scoreText"
                        android:textColor="#ffffffff"
                        android:layout_marginTop="2dp"
                        android:layout_marginLeft="55dp"
                        android:layout_weight="1"

                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:id="@+id/score"
                        android:textColor="#ffffffff"
                        android:layout_marginTop="2dp"
                        android:layout_marginRight="50dp"
                        android:textStyle="bold"
                        android:gravity="right"
                        android:layout_weight="1"
                        android:shadowDx="5"
                        android:shadowDy="5"
                        android:shadowRadius="15"
                        android:shadowColor="#000000"

                        />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/roundsWonLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_marginTop="8dp"
                    android:visibility="gone">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="Rounds Won :"
                        android:id="@+id/roundsWonText"
                        android:textStyle="bold"
                        android:shadowDx="5"
                        android:shadowDy="5"
                        android:shadowRadius="15"
                        android:shadowColor="#000000"
                        android:typeface="serif"
                        android:textColor="#ffffffff"
                        android:layout_marginTop="2dp"
                        android:layout_marginLeft="55dp"
                        android:layout_weight="1"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:id="@+id/roundsWon"
                        android:textColor="#ffffffff"
                        android:textStyle="bold"
                        android:shadowDx="5"
                        android:shadowDy="5"
                        android:shadowRadius="15"
                        android:shadowColor="#000000"
                        android:typeface="serif"
                        android:layout_marginTop="2dp"
                        android:gravity="right"
                        android:layout_weight="1"
                        android:layout_marginRight="50dp"
                        />
                </LinearLayout>

                <!-- Opponent Score -->
                <LinearLayout
                    android:id="@+id/oppscoreField"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2"
                        android:layout_marginTop="8dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:text="Opponent score :"
                            android:id="@+id/oppscoreText"
                            android:textColor="#ffffffff"
                            android:layout_marginTop="2dp"
                            android:gravity="left"
                            android:layout_weight="1"
                            android:textStyle="bold"
                            android:shadowDx="5"
                            android:shadowDy="5"
                            android:shadowRadius="15"
                            android:shadowColor="#000000"
                            android:typeface="serif"
                            android:layout_marginLeft="55dp"

                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:id="@+id/oppscore"
                            android:textColor="#ffffffff"
                            android:layout_marginTop="2dp"
                            android:gravity="right"
                            android:layout_weight="1"
                            android:layout_marginRight="50dp"
                            android:textStyle="bold"
                            android:shadowDx="5"
                            android:shadowDy="5"
                            android:shadowRadius="15"
                            android:shadowColor="#000000"
                            android:typeface="serif"

                            />
                    </LinearLayout>
                    <!--Opponent Rounds Information -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2"
                        android:layout_marginTop="8dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:text="Opponent rounds won:"
                            android:id="@+id/opproundsText"
                            android:textColor="#ffffffff"
                            android:layout_marginTop="2dp"
                            android:gravity="left"
                            android:layout_weight="1"
                            android:textStyle="bold"
                            android:shadowDx="5"
                            android:shadowDy="5"
                            android:shadowRadius="15"
                            android:shadowColor="#000000"
                            android:typeface="serif"
                            android:layout_marginLeft="55dp"

                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:id="@+id/roundsOppWon"
                            android:textColor="#ffffffff"
                            android:layout_marginTop="2dp"
                            android:gravity="right"
                            android:layout_weight="1"
                            android:layout_marginRight="40dp"

                            android:textStyle="bold"
                            android:shadowDx="5"
                            android:shadowDy="5"
                            android:shadowRadius="15"
                            android:shadowColor="#000000"
                            android:typeface="serif"
                            />
                    </LinearLayout>
                </LinearLayout>

                <!-- Winner display -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="You won!"
                    android:id="@+id/winner"
                    android:textColor="#ffffffff"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="2dp"
                    android:enabled="false"
                    android:textColorHighlight="#ff000000"
                    android:textStyle="bold"
                    android:shadowDx="25"
                    android:shadowDy="25"
                    android:shadowColor="#000000"
                    android:shadowRadius="25"
                    android:textSize="40dp"
                    android:visibility="gone" />


                <!-- Buttons: Next Round, End Game -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal"
                    android:gravity="center_horizontal">

                    <Button
                        android:layout_marginLeft="30dp"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"

                        android:id="@+id/button_close"
                        android:text="Close"
                        android:textAllCaps="false"
                        android:textColor="#ffffff"
                        android:textSize="17dp"
                        android:background="@drawable/buttonstyle"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_marginTop="8dp">
                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="150dp"
                        android:id="@+id/imageview1"
                        android:layout_marginLeft="120dp"
                        android:layout_marginTop="2dp"

                        />

                </LinearLayout>
            </LinearLayout>



        </LinearLayout>
    </LinearLayout>



</RelativeLayout>
